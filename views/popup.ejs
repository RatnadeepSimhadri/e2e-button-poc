<html>
<head>
    <title>Popup Content</title>
    <script src="/dist/sdk.umd.js"></script>
    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: Arial, sans-serif;
            background: white;
            height: 100%;
            box-sizing: border-box;
        }
        .popup-content {
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        .popup-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }
        .popup-header h2 {
            margin: 0;
            font-size: 1.5em;
        }
        .close-button {
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
            padding: 5px;
        }
        .popup-body {
            flex-grow: 1;
        }
        .loading-content {
            text-align: center;
        }
        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #3498db;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
<div class="popup-content">
    <div class="loading-content">
        <div class="spinner"></div>
        <h2>Loading content...</h2>
    </div>
</div>
<script>
    async function initializePopup() {
        if (!window.xprops) {
            console.error('Zoid props not available');
            return;
        }

        try {
            const data = await window.xprops.createOrder();
            console.log(data)
            window.location.href = `/redirect/${data.orderID}`;
        } catch (error) {
            console.error('Error:', error);
            // Optionally redirect to an error page
            window.location.href = '/error';
        }
    }

    window.addEventListener('load', initializePopup);
</script>
</body>
</html>